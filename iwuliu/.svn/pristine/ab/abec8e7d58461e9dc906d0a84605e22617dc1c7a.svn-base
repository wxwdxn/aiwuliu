.infoConditions{
    position: relative;
    .trackThePlayback{
        position: absolute;
        left: 70px;
        left: 5rem;
        top: 10px;
        top: 1rem;
        background: #fff;
        padding: 11px;
        padding-bottom: 0;
        box-shadow: 0 0 7px #0e0e0e;
        .form-group{
            margin: 0 3px;
            .btn.inputAndSelect{
                min-width: auto;
            }
            .license{
                width: 138px;
                vertical-align: top;
            }
            .licenseTitle{
                margin-top: 9px;
            }
            label{
                font-weight: 100;
            }
        }
        .playbackBtn{
            background: #69a2b5;
            color: #fff;
        }
    }
}
